<div class="ib-registration-form1">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :id => "#{display_user_type}RegForm") do |f| %>
    <div class="bottom-margin">
      <label>Email or Infinite Buyer Screen Name</label>
    </div>

    <div>
      <%= f.text_field :login, :id => "#{display_user_type}Email", :class => 'required' %>
    </div>

    <div class="top-margin bottom-margin">
      <label>Password</label>
    </div>

    <div>
      <%= f.password_field :password, :id => "#{display_user_type}Password", :class => 'required' %>
    </div>

    <div style="margin-left: 159px; width: 140px;">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
        <span><%= link_to "Forgot your password?", new_password_path(resource), :class => 'ibPassword', :rel => "facebox[.fcontainer]" %></span>
      <% end -%>
    </div>

    <div style="margin-top:51px; margin-left: 34px;">
      <div class="newAccount" style="">
        <span><%= link_to "Create a new Account", new_user_registration_url %></span>
      </div>

      <div class="signinSubmit" style="">
        <%= image_submit_tag '/assets/sign_in_btn.png' %>
      </div>
    </div>

  <% end %>
</div>
<div class="clear"></div>