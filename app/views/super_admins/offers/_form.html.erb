<%= form_for [:super_admins, @offer], :html => {:class => 'form-horizontal'} do |f| %>
    <%= error_messages_for 'offer', :class => "alert alert-error", :header_tag => "h3" %>
    <fieldset>
      <legend><%= controller.action_name.capitalize %> Offer</legend>

      <div class="control-group">
        <%= f.label :text, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :text, :class => 'text_field span6' %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to 'Cancel', super_admins_offers_path, :class => 'btn' %>
      </div>
    </fieldset>
<% end %>
