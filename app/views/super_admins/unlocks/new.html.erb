<h2>Resend unlock instructions</h2>

<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
  <div class="clearfix">
      <%= f.label :email %>
      <div class="input">
        <%= f.email_field :email %>
      </div>
    </div>
  <div class="clearfix">
  <%= f.submit "Resend unlock instructions", :class=> "btn" %></div>
    </fieldset>

<% end %>

