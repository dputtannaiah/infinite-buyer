<sidebar>
  <h3 class="first title"><span>Recent</span></h3>
  <ul class="sidebarNav">
    <% Blog::Post.limit(10).where("deleted_at is NULL").each do |blog_post| %>
      <li>
        <%= link_to blog_post.title, root_url + blog_post.slug.to_s, :class => "aGrey" %>
      </li>
    <% end %>
  </ul>
</sidebar>
