<%= form_for @blog_comment, :html => {:class => 'form-horizontal'} do |f| %>
    <%= error_messages_for 'blog_comment', :class => "alert alert-error", :header_tag => "h3" %>
    <fieldset>
      <legend><%= controller.action_name.capitalize %> Blog Comment</legend>

      <div class="control-group">
        <%= f.label :name, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :name, :class => 'text_field span6' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :email, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :email, :class => 'text_field span6' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :website, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :website, :class => 'text_field span6' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :body, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_area :body, :class => 'text_field span6' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :reviewed, :class => 'control-label' %>
        <div class="controls">
          <%= f.check_box :reviewed_at, {:class => 'text_field span6'}, Time.now , 0 %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.hidden_field :admin_id, :class => 'number_field', :value => current_admin.id %>
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to 'Cancel', blog_comments_path, :class => 'btn' %>
      </div>
    </fieldset>
<% end %>

<%= link_to 'Show', @blog_comment %> |
<%= link_to 'Back', blog_comments_path %>
