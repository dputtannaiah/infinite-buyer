<h2>Blog Comments</h2>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Created at</th>
    <th>Updated at</th>
  </tr>
  </thead>
  <tbody>
  <% @blog_comments.each do |blog_comment| %>
      <tr>
        <td><%= blog_comment.name %></td>
        <td><%= blog_comment.email %></td>
        <td><%= blog_comment.created_at %></td>
        <td><%= blog_comment.updated_at %></td>
        <td><%= link_to 'Show', blog_comment %></td>
        <td><%= link_to 'Edit', edit_blog_comment_path(blog_comment) %></td>
        <td><%= link_to 'Destroy', blog_comment, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= administration_menu %>
