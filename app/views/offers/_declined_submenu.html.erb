<% if @declined_offers.present? %>
  <li class="buyer text-left-align" style="width:343px;">Description</li>
  <li class="buyer text-left-align" style="width:150px;">Buyer<br />User ID</li>
  <li class="buyer text-right-align" style="width:94px;">Buyer<br />Offer Date</li>
  <li class="buyer text-right-align" style="width:111px;">Buyer<br />Offer</li>
  <li class="sort">
    <label>Sort by:</label>
    <%= form_tag declined_offers_path, :id => 'acc-bids-sort', :remote => true do %>
      <%= select_tag 'sort_key', options_for_select([['Recent activity', 'created_at'],['Description', 'text'],['Buyer User ID', 'username'],['Buyer Offer Date','created_at'],['Buyer Offer','price']], :selected => @selected) %>
    <% end %>
  </li>
<% end %>