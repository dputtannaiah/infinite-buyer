<% if @bids.present? %>
  <table cellpadding="0" cellspacing="0">
    <tr class="ib-mod-title">
      <td width="10%" align="left">Responses</td>
      <td width="15%" align="right">Seller Exp. Date</td>
      <td width="15%" align="left">Seller</td>
      <td width="30%" align="left">Product Description<br /> with Seller Details</td>
      <td width="15%" align="right">Original<br />Offer<br />Price</td>
      <td width="15%" align="right">Countered<br />Price</td>
      <td width="10%" align="right">Shipping</td>
      <% if offer_status(@offer) %>
        <td width="25%" align="left">Status</td>
      <% end %>
    </tr>
    <tr>
      <td></td>
    </tr>
    <%= render(@bids) %>
    <tr>
      <td></td>
    </tr>
  </table>
<% else %>
  <div class="seller-alert ib-empty-messages" style="margin-top: 100px;">
    <span>
      There are no offers or counter offers available yet.
    </span>
  </div>
<% end %>